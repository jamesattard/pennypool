<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.3/semantic.min.css">
	</head>
	<body>
		<div class="ui page">
			<div class="ui top attached borderless menu">
				<div class="text item"><%= title %></div>
			</div>
		  	<div class="ui container">
		  		<div class="ui huge header">
		  			Create
		  			<div class="sub header">Make a new group</div>
		  		</div>
				<form class="ui form">
					<div class="inline fields">
						<label>Bid frequency</label>
						<div class="field">
							<div class="ui radio checkbox">
								<input type="radio" name="freq" value="weekly">
								<label>Weekly</label>
							</div>
						</div>
						<div class="field">
							<div class="ui radio checkbox">
								<input type="radio" name="freq" value="monthly" checked>
								<label>Monthly</label>
							</div>
						</div>
					</div>
					<div class="field">
						<label><span class="freq_text">Monthly</span> Premium</label>
						<input type="text" name="premium" placeholder="Premium">
					</div>
					<div class="field">
						<label>Number of Members <span style="font-style:italic; color:rgba(0,0,0,0.3)">i.e. <span class="iterationsNo">12</span> <span class="iterationsTxt">months</span> of bidding</span></label>
						<input type="text" name="membersCount" placeholder="Number of Members" value=12>
					</div>
					<div class="field">
						<label>Member(s) <span style="font-style:italic; color:rgba(0,0,0,0.3)">(i.e. <span></span> number of <span class="iterationsTxt"></span>)</span></label>
						<input type="text" name="member[]" placeholder="Member" class="currentWorkingInput" autocomplete="off">
					</div>
				</form>
		    </div>
		</div>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.3/semantic.min.js"></script>
  		<script>
  			$(function() {
  				$('input[type="radio"]').on("change", function(){
  					var bid_freq = $(this).attr('value');
  					$('.freq_text').html(bid_freq.charAt(0).toUpperCase() + bid_freq.slice(1));
  					if (bid_freq == 'monthly')
  						iterTxt = "months";
  					else
  						iterTxt = "weeks";
  					$('.iterationsTxt').html(iterTxt);
  				});
  				$('input[name="membersCount"]').on("keyup", function(){
  					$('.iterationsNo').html($(this).val());
  				});
  				$('body').delegate('input[name="member[]"]', "keyup", function() {
  					if ($.trim($(this).val()) != '' && $(this).hasClass('currentWorkingInput')) {
  						$(this).parent('.field').append('<input type="text" name="member[]" placeholder="Member" autocomplete="off" class="currentWorkingInput">');
  						$(this).removeClass('currentWorkingInput');
  					}
  				});
  			});
  		</script>
	</body>
</html>
